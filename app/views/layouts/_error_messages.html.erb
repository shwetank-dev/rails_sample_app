<% if @user && @user.errors.any? %>
  <article class="alert danger">
    <p><%= icon(:danger) %> The form contains <%= pluralize(@user.errors.count, "error") %></p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </article>
<% end %>