<% provide(:title, @user.name) %>
<div class="layout">
  <aside class="layout__sidebar">
    <%= gravatar_for(@user) %>
    <hgroup>
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
    </hgroup>
  </aside>
  <section class="layout__content">
    <h1>Welcome, <i><%= @user.name %></i></h1>
  </section>
</div>